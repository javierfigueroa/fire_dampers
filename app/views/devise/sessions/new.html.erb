   <fieldset>
   <div class="control-group">
  	<label class="control-label" for="user_email">Email</label>
   		<div class="controls">
  			<input id="user_email" type="text" class="input-large" placeholder="Username" name="user[email]" size="30" type="email" />
   		</div>
  	</div>
  <div class="control-group">
  	<label class="control-label" for="user_password">Password</label>
  		<div class="controls">
  			<input id="user_password" type="password" class="input-large" name="user[password]" size="30" type="password" />
   		</div>
  </div>
  
  
  <div class="control-group">
  	<label class="control-label" for="user_remember_me">Remember me</label>
  	<div class="controls">
  		<input name="user[remember_me]" type="hidden" value="0" />
  		<input id="user_remember_me" name="user[remember_me]" type="checkbox" value="1" />
  	</div>
  </div>
  <div class="form-actions">
           <button type="submit" class="btn btn-primary">Login</button>
           <a href="/password/new">Forgot your password?</a>
         </div>
  </fieldset>
<% end %>
