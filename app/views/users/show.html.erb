<div class="row-fluid">
	<%= render 'navlist' %>
	<div class="span10">
		<div class="row">
			<div class="span12">
				<ul class="breadcrumb">
					<li>
						<a href="#">Home</a><span class="divider">/</span>
					</li>
					<li>
						<a href="<%= users_path %>"><%= controller_name.capitalize %></a><span class="divider">/</span>
					</li>
					<li class="active">
						<a href="#"><%= @user.email %></a>
					</li>
				</ul>
				<% if notice %>
				<div class="alert alert-block alert-success fade in">
					<a class="close" data-dismiss="alert">Ã—</a>
					<h4 class="alert-heading"><%= notice %></h4>
				</div>
				<% end %>
			</div>
		</div>
		<div class="row">
			<div class="span12">
				<div class="row">
					<div class="span6">
						<ul class="nav nav-pills">
							<li>
								<a href="<%= users_path %>"><i class="icon-arrow-left"></i> Back</a>
							</li>
							<li>
								<a href="<%= edit_user_path(@user) %>"><i class="icon-cog"></i> Edit User</a>
							</li>
						</ul>
					</div>
				</div>
			</div>
		</div>
		<div class="row">
			<div class="span12">
				<legend>
					<%= @user.first_name %> - <%= @user.last_name %> <small><%= @user.email %></small>
				</legend>
				<p>
					<b>Status:</b>
					<% if @user.active? %>
					ACTIVE
					<% else %>
					DISABLED
					<%end%>
				</p>
				<p>
					<b>First name:</b>
					<%= @user.first_name %>
				</p>
				<p>
					<b>Last name:</b>
					<%= @user.last_name %>
				</p>
				<p>
					<b>Registration date:</b>
					<%= @user.created_at %>
				</p>
				<p>
					<b>Last login date:</b>
					<%= @user.last_sign_in_at %>
				</p>
				<p>
					<b>Email:</b>
					<%= @user.email %>
				</p>
				<p>
					<b>Phone:</b>
					<%= @user.phone %>
				</p>
				<p>
					<b>Role:</b>
					<%= @user.role %>
				</p>
			</div>
		</div>
	</div>
</div>
</div> 