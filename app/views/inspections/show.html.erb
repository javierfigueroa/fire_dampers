<div class="row-fluid">
	<%= render 'navlist' %>
	<div class="span8">
		<div class="row">
			<div class="span8">
				<ul class="breadcrumb">
					<li>
						<a href="#">Home</a><span class="divider">/</span>
					</li>
					<li>
						<a href="<%= inspections_path %>"><%= controller_name.capitalize %></a><span class="divider">/</span>
					</li>
					<li class="active">
						<a href="#"><%= @inspection.damper_id %></a>
					</li>
				</ul>
				<% if notice %>
				<div class="alert alert-block alert-success fade in">
					<a class="close" data-dismiss="alert">Ã—</a>
					<h4 class="alert-heading"><%= notice %></h4>
				</div>
				<% end %>
			</div>
		</div>
		<div class="row">
			<div class="span8">
				<div class="row">
					<div class="span6">
						<ul class="nav nav-pills">
							<li>
								<a href="<%= inspections_path %>"><i class="icon-arrow-left"></i> Back</a>
							</li>
							<li>
								<a href="<%= edit_inspection_path(@inspection) %>"><i class="icon-cog"></i> Edit Inspection</a>
							</li>
						</ul>
					</div>
				</div>
			</div>
		</div>
		<div class="row">
			<div class="span8">
				<legend>
					<%= @inspection.damper_id %> <small><%= @inspection.tag %></small>
				</legend>
				<p>
					<b>Building abbrev:</b>
					<%= @inspection.building_abbrev %>
				</p>
				<p>
					<b>Inspection date:</b>
					<%= @inspection.inspection_date %>
				</p>
				<p>
					<b>Floor:</b>
					<%= @inspection.floor %>
				</p>
				<p>
					<b>Unit:</b>
					<%= @inspection.unit %>
				</p>
				<p>
					<b>Technician</b>
					<%= @inspection.technician.first_name %> <%= @inspection.technician.last_name %>
				</p>
				<p>
					<b>Location:</b>
					<%= @inspection.location %>
				</p>
				<p>
					<b>Damper:</b>
					<%= @inspection.damper_id %>
				</p>
				<p>
					<b>Damper status:</b>
					<%= @inspection.damper_status.abbrev %> - <%= @inspection.damper_status.description %>
				</p>
				<p>
					<b>Damper type:</b>
					<%= @inspection.damper_type.abbrev %> - <%= @inspection.damper_type.description %>
				</p>
				<p>
					<b>Damper Airstream</b>
					<%= @inspection.damper_airstream.abbrev %>
				</p>
                <p>
                    <b>Damper Is Non Accessible</b>
                    <%= @inspection.nonaccessible %>
                </p>
                <p>
                    <b>Damper Needs Replacement</b>
                    <%= @inspection.replace %>
                </p>
				<p>
					<b>Description:</b>
					<%= @inspection.description %>
				</p>
				<p>
					<b>Height and Length: </b>
					<%= @inspection.height %> x <%= @inspection.length %>
				</p>
				<p>
					<b>Job:</b>
					<%= @inspection.job.name %>
				</p>
				<p>
					<b>Notes:</b>
					<%= @inspection.notes %>
				</p>
				
				<p>
					<img src="<%= @inspection.damper_image %>" width="300px" height="300px" />
					<img src="<%= @inspection.damper_image_second %>" width="300px" height="300px" />
				</p>
			</div>
		</div>
	</div>
</div>
</div> 