								<td><%= sprintf("%.1f%",@floor_percentage_totals["pass"]) %></td>
								<td><%= sprintf("%.1f%",@floor_percentage_totals["fail"]) %></td>
								<td><%= sprintf("%.1f%",@floor_percentage_totals["vine"]) %></td>
								<td><%= sprintf("%.1f%",@floor_percentage_totals["repair"]) %></td>
								<td><%= sprintf("%.1f%",@floor_percentage_totals["total"]) %></td>
							</tr>
