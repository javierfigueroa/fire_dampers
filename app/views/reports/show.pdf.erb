								<td><%= summary["floor"] %></td>
								<td><%= summary["fire"] %></td>
								<td><%= summary["smoke"] %></td>
								<td><%= summary["pass"] %></td>
								<td><%= summary["fail"] %></td>
								<td><%= summary["vine"] %></td>
