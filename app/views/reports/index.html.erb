									<th>Report</th>
									<th></th>
								</tr>
							</thead>
							<tbody role="alert" aria-live="polite" aria-relevant="all">
								<% @reports.each do |report| %>
								<tr>
									<td><%= report.job %></td>
									<td><%= link_to 'Show', report %><%= link_to 'Edit', edit_report_path(report) %>><%= link_to 'Destroy', report, :confirm => 'Are you sure?', :method => :delete %></td>
								</tr>
								<% end %>
							</tbody>
						</table>
					</div>
				</div>
			</div>
		</div>
	</div>
