<div class="row-fluid">
	<%= render 'navlist' %>
	<div class="span8">
		<div class="row">
			<div class="span8">
				<ul class="breadcrumb">
					<li>
						<a href="#">Home</a><span class="divider">/</span>
					</li>
					<li>
						<a href="<%= reports_path %>"><%= controller_name.capitalize %></a><span class="divider">/</span>
					</li>
					<li class="active">
						<a href="#"><%= controller.action_name.capitalize %></a>
					</li>
				</ul>
				<% if @report.errors.any? %>
				<div class="alert alert-block alert-error fade in">
					<a class="close" data-dismiss="alert">Ã—</a>
					<h4 class="alert-heading"><%= pluralize(@report.errors.count, "error") %> prohibited this report from being generated:</h4>
					<ul>
						<% @report.errors.full_messages.each do |msg| %>
						<li>
							<%= msg %>
						</li>
						<% end %>
					</ul>
				</div>
				<% end %>
			</div>
		</div>
		<div class="row">
			<div class="span8">
				<div class="row">
					<div class="span6">
						<ul class="nav nav-pills">
							<li>
								<a href="<%= reports_path %>"><i class="icon-arrow-left"></i> Back</a>
							</li>
						</ul>
					</div>
				</div>
			</div>
		</div>
		<div class="row">
			<div class="span8">
			<%= render 'form' %>
			</div>
		</div>
	</div>
</div>
