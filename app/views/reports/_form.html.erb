<%= form_for @report, :html => { :class => 'form-horizontal' } do |f| %>
<legend>
	<%= controller.action_name.capitalize %> Report <small>Select a job to generate a report</small>
</legend>
<div class="control-group">
	<div class="control-group">
		<%= f.label :job , :class => 'control-label' %>
		<div class="controls">
			<%= select("inspection", "job_id", Job.all.collect {|p| [ p.name, p.id ] }) %>
		</div>
	</div>
	<div class="form-actions">
		<%= f.submit nil, :class => 'btn btn-primary' %>
	</div>
	<% end %>
